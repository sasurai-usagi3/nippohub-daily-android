<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.sasuraiusagi3.nippohub_daily.activities.EditDailyReportActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/editDailyReportToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize">

        <Button
            android:id="@+id/editDailyReportButtonToBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="@string/back"
            android:textColor="@color/colorLink" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editDailyReportToolBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/editDailyReportLabelDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dailyReportDate"
                android:textSize="16sp" />

            <DatePicker
                android:id="@+id/editDailyReportFormDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                app:layout_constraintTop_toBottomOf="@+id/editDailyReportLabelDate" />

            <TextView
                android:id="@+id/editDailyReportLabelTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/dailyReportTitle"
                app:layout_constraintTop_toBottomOf="@+id/editDailyReportFormDate" />

            <EditText
                android:id="@+id/editDailyReportFormTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1"
                app:layout_constraintTop_toBottomOf="@+id/editDailyReportLabelTitle" />

            <TextView
                android:id="@+id/editDailyReportLabelContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/dailyReportContent"
                app:layout_constraintTop_toBottomOf="@+id/editDailyReportFormTitle" />

            <EditText
                android:id="@+id/editDailyReportFormContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/editDailyReportLabelContent" />

            <Button
                android:id="@+id/editDailyReportButtonSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@color/colorOK"
                android:text="@string/update"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editDailyReportFormContent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

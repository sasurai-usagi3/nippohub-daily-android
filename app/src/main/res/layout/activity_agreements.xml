<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.sasuraiusagi3.nippohub_daily.activities.AgreementsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/agreementsToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary">
        <Button
            android:id="@+id/agreementsButtonToBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="閉じる" />
    </android.support.v7.widget.Toolbar>
    <WebView
        android:id="@+id/agreementsWebview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/agreementsToolBar"
        app:layout_constraintBottom_toBottomOf="parent">
    </WebView>
</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingTop="10dp"
    android:paddingRight="5dp"
    android:paddingBottom="10dp">

    <Button
        android:id="@+id/daily_report_share_url_btn_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/share" />

    <LinearLayout
        android:id="@+id/daily_report_share_url_group_shared"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/daily_report_share_url_text_edit_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            tools:ignore="LabelFor,TextFields" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/daily_report_share_url_btn_stop_sharing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stop_sharing" />
    </LinearLayout>

</FrameLayout>
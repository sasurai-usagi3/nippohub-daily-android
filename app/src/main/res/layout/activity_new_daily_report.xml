<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.sasuraiusagi3.nippohub_daily.activities.NewDailyReportActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/newDailyReportToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize">

        <Button
            android:id="@+id/newDailyReportButtonToBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="戻る" />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/newDailyReportLabelDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        app:layout_constraintTop_toBottomOf="@id/newDailyReportToolBar" />

    <DatePicker
        android:id="@+id/newDailyReportFormDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:datePickerMode="spinner"
        app:layout_constraintTop_toBottomOf="@+id/newDailyReportLabelDate"></DatePicker>

    <TextView
        android:id="@+id/newDailyReportLabelTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        app:layout_constraintTop_toBottomOf="@+id/newDailyReportFormDate" />

    <EditText
        android:id="@+id/newDailyReportFormTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/newDailyReportLabelTitle" />

    <TextView
        android:id="@+id/newDailyReportLabelContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="content"
        app:layout_constraintTop_toBottomOf="@+id/newDailyReportFormTitle" />

    <EditText
        android:id="@+id/newDailyReportFormContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/newDailyReportLabelContent" />

    <Button
        android:id="@+id/newDailyReportButtonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="作成"
        app:layout_constraintTop_toBottomOf="@+id/newDailyReportFormContent" />


</android.support.constraint.ConstraintLayout>
